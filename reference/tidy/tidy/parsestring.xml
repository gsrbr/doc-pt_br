 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Exemplo de <function>tidy::parseString</function></title>
    <programlisting role="php">
<![CDATA[
<?php
ob_start();
?>

<html>
  <head>
   <title>teste</title>
  </head>
  <body>
   <p>erro<br>outra linha</i>
  </body>
</html>

<?php

$buffer = ob_get_clean();
$config = array('indent' => TRUE,
                'output-xhtml' => TRUE,
                'wrap' => 200);

$tidy = tidy_parse_string($buffer, $config, 'UTF8');

$tidy->cleanRepair();
echo $tidy;
?>
]]>
    </programlisting>
    &example.outputs;
    <screen>
<![CDATA[
