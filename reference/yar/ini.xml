 &ini.descriptions.title;

 <para>
  <variablelist>
   <varlistentry xml:id="ini.yar.packager">
     <term>
      <parameter>yar.packager</parameter>
      <type>string</type>
     </term>
     <listitem>
      <para>
       pode ser php, json e msgpack (requer construção com suporte a msgpack)
      </para>
     </listitem>
    </varlistentry>
    <varlistentry xml:id="ini.yar.debug">
     <term>
      <parameter>yar.debug</parameter>
      <type>string</type>
     </term>
     <listitem>
      <para>

      </para>
     </listitem>
    </varlistentry>
    <varlistentry xml:id="ini.yar.connect-timeout">
     <term>
      <parameter>yar.connect_timeout</parameter>
      <type>int</type>
     </term>
     <listitem>
      <para>
       tempo limite em ms
      </para>
     </listitem>
    </varlistentry>
    <varlistentry xml:id="ini.yar.timeout">
     <term>
      <parameter>yar.timeout</parameter>
      <type>int</type>
     </term>
     <listitem>
      <para>
       tempo limite em ms
      </para>
     </listitem>
    </varlistentry>
    <varlistentry xml:id="ini.yar.expose-info">
     <term>
      <parameter>yar.expose_info</parameter>
      <type>bool</type>
     </term>
     <listitem>
      <para>
       informa se as informações do serviço devem ser expostas (ao acessar o servidor via GET)
      </para>
     </listitem>
    </varlistentry>

  </variablelist>
