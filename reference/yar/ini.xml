      <entry><link linkend="ini.yar.timeout">yar.timeout</link></entry>
      <entry>5000</entry>
      <entry><constant>INI_ALL</constant></entry>
      <entry><!-- leave empty, this will be filled by an automatic script --></entry>
     </row>
